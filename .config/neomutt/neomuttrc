source ~/.private-configs/mutt-mails/main
folder-hook -noregex MAIN 'source ~/.private-configs/mutt-mails/main'
source ~/.private-configs/mutt-mails/contact
folder-hook -noregex CONTACT 'source ~/.private-configs/mutt-mails/contact'
source ~/.private-configs/mutt-mails/finance
folder-hook -noregex FINANCE 'source ~/.private-configs/mutt-mails/finance'
source ~/.private-configs/mutt-mails/gamedev
folder-hook -noregex GAMEDEV 'source ~/.private-configs/mutt-mails/gamedev'
folder-hook . 'source $XDG_CONFIG_HOME/neomutt/multiaccount'


set sidebar_visible = yes
set sidebar_format = '%D%?F? [%F]?%* %?N?%N/? %?S?%S?'
set sidebar_short_path = yes
set sidebar_next_new_wrap = yes
set sidebar_sort_method = desc
set sidebar_component_depth = 1

# Sidebar mappings
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_short_path = yes
set sidebar_next_new_wrap = yes
set mail_check_stats
set sidebar_format = '%D%?F? %F!? %?N?[%N]?%* %?S?T:%S?'
bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Co sidebar-open
bind index,pager \Cp sidebar-prev-new
bind index,pager \Cn sidebar-next-new
bind index,pager B sidebar-toggle-visible

set reverse_name		# reply as whomever it was to

# If you start mutt and several new messages are in your inbox and you close
# mutt before you have read them, then those messages will get flagged as old
# (by default). The behavior can be controlled via the mark_old configuration variable.
set mark_old = no
# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300
# How often to check for new mail (time in seconds).
set mail_check = 120


#MAPPINGS
#

# Unbinds para evitar problemas de configuracion

bind index,pager i noop
bind index,pager g noop
#bind index \Cf noop
bind index,pager M noop
bind index,pager C noop
# General rebindings
bind index gg first-entry
bind index j next-entry
bind index k previous-entry
bind attach <return> view-mailcap
bind attach l view-mailcap
bind editor <space> noop
bind index G last-entry
bind index gg first-entry
bind pager,attach h exit
bind pager j next-line
bind pager k previous-line
bind pager l view-attachments
bind index D delete-message
bind index U undelete-message
bind index L limit
bind index h noop
bind index l display-message
bind index,query <space> tag-entry
macro browser h '<change-dir><kill-line>..<enter>' "Go to parent folder"
bind index,pager H view-raw-message
bind browser l select-entry
bind pager,browser gg top-page
bind pager,browser G bottom-page
bind index,pager,browser d half-down
bind index,pager,browser u half-up
bind index \031 previous-undeleted	# Mouse wheel
bind index \005 next-undeleted		# Mouse wheel
bind pager \031 previous-line		# Mouse wheel
bind pager \005 next-line		# Mouse wheel
bind editor <Tab> complete-query


#AESTHETICS
